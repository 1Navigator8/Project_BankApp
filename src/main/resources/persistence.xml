<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
              https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
<!--    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>-->
        <class>com.example.bankapp.entity.Account</class>
        <class>com.example.bankapp.entity.Agreement</class>
        <class>com.example.bankapp.entity.Client</class>
        <class>com.example.bankapp.entity.Manager</class>
        <class>com.example.bankapp.entity.Product</class>
        <class>com.example.bankapp.entity.Transaction</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/bank_app"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="user"/>
            <property name="hibernate.connection.password" value="user"/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

